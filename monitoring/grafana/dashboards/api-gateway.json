{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Request Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(gateway_requests_total[5m])) by (status)",
          "legendFormat": "{{status}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "drawStyle": "line", "fillOpacity": 10 }
        },
        "overrides": [
          { "matcher": { "id": "byRegexp", "options": "5.." }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] },
          { "matcher": { "id": "byRegexp", "options": "4.." }, "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }] },
          { "matcher": { "id": "byRegexp", "options": "2.." }, "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }] }
        ]
      }
    },
    {
      "title": "Error Rate %",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(gateway_requests_total{status=~\"5..\"}[5m])) / sum(rate(gateway_requests_total[5m])) * 100",
          "legendFormat": "Error %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "steps": [{ "value": 0, "color": "green" }, { "value": 1, "color": "yellow" }, { "value": 5, "color": "red" }] }
        }
      }
    },
    {
      "title": "Active Requests",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "sum(gateway_active_requests)",
          "legendFormat": "Active"
        }
      ],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "value": 0, "color": "green" }, { "value": 50, "color": "yellow" }, { "value": 100, "color": "red" }] } } }
    },
    {
      "title": "Auth Failures / min",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(gateway_auth_failures_total[5m])) * 60",
          "legendFormat": "Failures"
        }
      ],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "value": 0, "color": "green" }, { "value": 5, "color": "yellow" }, { "value": 20, "color": "red" }] } } }
    },
    {
      "title": "Latency Percentiles",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(gateway_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(gateway_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(gateway_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "drawStyle": "line", "fillOpacity": 5 }
        }
      }
    },
    {
      "title": "Rate Limit Hits",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(gateway_rate_limit_hits_total[5m])) by (tenant_id) * 60",
          "legendFormat": "{{tenant_id}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "opm", "custom": { "drawStyle": "bars" } } }
    },
    {
      "title": "Auth Failures by Reason",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 8 },
      "targets": [
        {
          "expr": "sum(gateway_auth_failures_total) by (reason)",
          "legendFormat": "{{reason}}"
        }
      ]
    },
    {
      "title": "Proxy Errors by Backend",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "sum(rate(gateway_proxy_errors_total[5m])) by (backend, error_type) * 60",
          "legendFormat": "{{backend}} ({{error_type}})"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "opm", "custom": { "drawStyle": "bars", "fillOpacity": 50 } } }
    },
    {
      "title": "Backend Proxy Latency (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(gateway_proxy_duration_seconds_bucket[5m])) by (le, backend))",
          "legendFormat": "{{backend}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "custom": { "drawStyle": "line" } } }
    },
    {
      "title": "Requests by Tenant",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "sum(rate(gateway_requests_total[5m])) by (tenant_id)",
          "legendFormat": "{{tenant_id}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "drawStyle": "line", "fillOpacity": 20 } } }
    },
    {
      "title": "Requests by Path",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "targets": [
        {
          "expr": "topk(10, sum(rate(gateway_requests_total[1h])) by (path))",
          "format": "table",
          "instant": true
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["cloud-relay", "api-gateway"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "API Gateway",
  "uid": "api-gateway",
  "version": 1
}
