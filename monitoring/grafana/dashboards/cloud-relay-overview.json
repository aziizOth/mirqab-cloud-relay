{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Service Health",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [{ "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }],
          "thresholds": { "steps": [{ "value": 0, "color": "red" }, { "value": 1, "color": "green" }] }
        }
      }
    },
    {
      "title": "Total Request Rate",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(gateway_requests_total[5m]))",
          "legendFormat": "req/s"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "title": "Error Rate",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(gateway_requests_total{status=~\"5..\"}[5m])) / sum(rate(gateway_requests_total[5m])) * 100",
          "legendFormat": "Error %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": { "steps": [{ "value": 0, "color": "green" }, { "value": 1, "color": "yellow" }, { "value": 5, "color": "red" }] }
        }
      }
    },
    {
      "title": "P95 Latency",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(gateway_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": { "steps": [{ "value": 0, "color": "green" }, { "value": 1, "color": "yellow" }, { "value": 5, "color": "red" }] }
        }
      }
    },
    {
      "title": "Auth Failures (5m)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 4 },
      "targets": [
        {
          "expr": "sum(increase(gateway_auth_failures_total[5m]))",
          "legendFormat": "Failures"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": { "steps": [{ "value": 0, "color": "green" }, { "value": 5, "color": "yellow" }, { "value": 20, "color": "red" }] }
        }
      }
    },
    {
      "title": "Traffic by Status Code",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(gateway_requests_total[5m])) by (status)",
          "legendFormat": "{{status}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "drawStyle": "line", "fillOpacity": 15 } } }
    },
    {
      "title": "Top Tenants by Request Volume",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "topk(10, sum(rate(gateway_requests_total[1h])) by (tenant_id))",
          "legendFormat": "{{tenant_id}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "title": "Backend Proxy Health",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "sum(rate(gateway_proxy_errors_total[5m])) by (backend)",
          "legendFormat": "errors: {{backend}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops", "custom": { "drawStyle": "bars", "fillOpacity": 50 } } }
    },
    {
      "title": "Rate Limit & Quota Events",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "sum(rate(gateway_rate_limit_hits_total[5m])) * 60",
          "legendFormat": "Rate Limit Hits"
        },
        {
          "expr": "sum(rate(gateway_quota_exceeded_total[5m])) * 60",
          "legendFormat": "Quota Exceeded"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "opm", "custom": { "drawStyle": "line", "fillOpacity": 20 } } }
    }
  ],
  "schemaVersion": 39,
  "tags": ["cloud-relay", "overview"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Cloud Relay Overview",
  "uid": "cloud-relay-overview",
  "version": 1
}
