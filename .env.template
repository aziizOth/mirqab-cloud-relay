# Mirqab Cloud Relay - Environment Variables Template
# Copy to .env and fill in production values:
#   cp .env.template .env
#   # Edit .env with secure values, or run:
#   ./scripts/generate-secrets.sh
#
# NEVER commit .env to git.

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=relay
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=relay

# ===========================================
# REDIS
# ===========================================
REDIS_PASSWORD=CHANGE_ME

# ===========================================
# SIGNING KEYS (HMAC-SHA256)
# ===========================================
SIGNING_KEY=CHANGE_ME
C2_SIGNING_KEY=CHANGE_ME
PHISHING_SIGNING_KEY=CHANGE_ME

# ===========================================
# API GATEWAY
# ===========================================
# Set to true in production
REQUIRE_MTLS=false
REQUIRE_SIGNATURE=false
DEBUG=true

# Test credentials (only used when DEBUG=true)
TEST_API_KEY=CHANGE_ME
TEST_API_SECRET=CHANGE_ME

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ===========================================
# CLOUD RELAY HOST
# ===========================================
CLOUD_RELAY_HOST=192.168.100.67
CLOUD_RELAY_DOMAIN=relay.local
